{
  "manifest_version": 3,
  "name": "Browser Mc Wingspan",
  "version": "1.0",
  "description": "A smart browser extension assistant that answers questions, checks the page you're on, and gets stuff done for you.",
  "action": {
    "default_title": "Open Sidebar Chat",
    "default_icon": {
      "16": "icons/icon_cs_16.png",
      "36": "icons/icon_cs_36.png",
      "128": "icons/icon_cs_128.png"
    }
  },
  "icons": {
    "16": "icons/icon_cs_16.png",
    "36": "icons/icon_cs_36.png",
    "128": "icons/icon_cs_128.png"
},
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "optional_permissions": [
    "audioCapture"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "./js/background.js"
  }
}